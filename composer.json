{
    "name": "infocyph/intermix",
    "description": "A Collection of useful PHP class functions.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "intermix",
        "di",
        "container",
        "dependency",
        "injection",
        "memoize",
        "macro",
        "mixin",
        "cache",
        "reflection"
    ],
    "authors": [
        {
            "name": "abmmhasan",
            "email": "abmmhasan@gmail.com"
        }
    ],
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "Infocyph\\InterMix\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Infocyph\\InterMix\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.2",
        "opis/closure": "^4.3",
        "psr/cache": "^3.0",
        "psr/container": "^2.0",
        "symfony/cache": "^7.2"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test:code": "pest --parallel --processes=10",
        "test:refactor": "rector process --dry-run",
        "test:lint": "pint --test",
        "test:hook": [
            "captainhook hook:post-checkout",
            "captainhook hook:pre-commit",
            "captainhook hook:post-commit",
            "captainhook hook:post-merge",
            "captainhook hook:post-rewrite",
            "captainhook hook:pre-push"
        ],
        "tests": [
            "@test:code",
            "@test:lint",
            "@test:refactor"
        ],
        "git:hook": "captainhook install --only-enabled -nf",
        "test": "pest",
        "refactor": "rector process",
        "lint": "pint",
        "post-autoload-dump": "@git:hook"
    },
    "require-dev": {
        "captainhook/captainhook": "^5.24",
        "laravel/pint": "^1.20",
        "pestphp/pest": "^3.7",
        "rector/rector": "^2.0",
        "symfony/var-dumper": "^7.2"
    }
}
